<VAST version="3.0">
  <Ad id="VPAID_Selector_Ad">
    <InLine>
      <AdSystem>VPAID Selector System</AdSystem>
      <AdTitle>VPAID Video Selector</AdTitle>
      <Description>Interactive VPAID 2.0 unit with dual video selection</Description>
      
      <!-- 
        *** IMPRESSION TRACKING *** 
        Replace the URL below with your impression tracker.
      -->
      <Impression>
        <![CDATA[[INSERT_IMPRESSION_TRACKER_URL_HERE]]]>
      </Impression>

      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:30</Duration>
            
            <TrackingEvents>
              <!-- 
                *** VIDEO TRACKING EVENTS *** 
                Replace the URLs below with your specific trackers for each event.
              -->
              <Tracking event="start">
                <![CDATA[[INSERT_TRACKING_URL_START_HERE]]]>
              </Tracking>
              <Tracking event="firstQuartile">
                <![CDATA[[INSERT_TRACKING_URL_FIRST_QUARTILE_HERE]]]>
              </Tracking>
              <Tracking event="midpoint">
                <![CDATA[[INSERT_TRACKING_URL_MIDPOINT_HERE]]]>
              </Tracking>
              <Tracking event="thirdQuartile">
                <![CDATA[[INSERT_TRACKING_URL_THIRD_QUARTILE_HERE]]]>
              </Tracking>
              <Tracking event="complete">
                <![CDATA[[INSERT_TRACKING_URL_COMPLETE_HERE]]]>
              </Tracking>
              <Tracking event="mute">
                <![CDATA[[INSERT_TRACKING_URL_MUTE_HERE]]]>
              </Tracking>
              <Tracking event="unmute">
                <![CDATA[[INSERT_TRACKING_URL_UNMUTE_HERE]]]>
              </Tracking>
              <Tracking event="pause">
                <![CDATA[[INSERT_TRACKING_URL_PAUSE_HERE]]]>
              </Tracking>
              <Tracking event="resume">
                <![CDATA[[INSERT_TRACKING_URL_RESUME_HERE]]]>
              </Tracking>
              <Tracking event="fullscreen">
                <![CDATA[[INSERT_TRACKING_URL_FULLSCREEN_HERE]]]>
              </Tracking>
              <Tracking event="exitFullscreen">
                <![CDATA[[INSERT_TRACKING_URL_EXIT_FULLSCREEN_HERE]]]>
              </Tracking>
              <!-- Optional: Add more events like 'skip', 'progress', etc. if needed -->
            </TrackingEvents>

            <VideoClicks>
              <!-- 
                *** CLICK TRACKING *** 
                ClickThrough: The URL the user is taken to (fallback if VPAID doesn't handle it).
                ClickTracking: The pixel fired when a click occurs.
              -->
              <ClickThrough>
                <![CDATA[[INSERT_FALLBACK_CLICK_THROUGH_URL_HERE]]]>
              </ClickThrough>
              <ClickTracking>
                <![CDATA[[INSERT_CLICK_TRACKING_PIXEL_URL_HERE]]]>
              </ClickTracking>
            </VideoClicks>

            <MediaFiles>
              <!-- 
                *** VPAID UNIT URL ***
                Update the CDATA below to point to the hosted location of your vpaid.js file.
              -->
              <MediaFile delivery="progressive" type="application/javascript" width="1280" height="720" apiFramework="VPAID">
                <![CDATA[https://serra772.github.io/VPAID-selector/vpaid.js]]>
              </MediaFile>
            </MediaFiles>

            <!-- 
              *** AD PARAMETERS ***
              Configuration for the VPAID unit.
              IMPORTANT: 
              1. Update 'staticImageUrl' to the absolute URL of your background image.
              2. Update 'videoUrl' for each option to the absolute URL of your video files.
              3. Update 'clickThroughUrl' for each option to the destination page.
              4. Update 'customPixelBaseUrl' if you use custom internal tracking.
            -->
            <AdParameters>
              <![CDATA[
                {
                  "staticImageUrl": "https://serra772.github.io/VPAID-selector/background.png",
                  "autoStartTimeoutMs": 10000,
                  "videoOptions": [
                    {
                      "id": "video1",
                      "videoUrl": "https://serra772.github.io/VPAID-selector/video1.mp4",
                      "clickThroughUrl": "https://dobrycola-promo.ru"
                    },
                    {
                      "id": "video2",
                      "videoUrl": "https://serra772.github.io/VPAID-selector/video2.mp4",
                      "clickThroughUrl": "https://dobrycola-promo.ru"
                    }
                  ],
                  "customPixelBaseUrl": "[INSERT_CUSTOM_PIXEL_BASE_URL_HERE]",
                  "customPixelCommonParams": "&campaign_id=[INSERT_CAMPAIGN_ID]"
                }
              ]]>
            </AdParameters>

          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
</VAST>
